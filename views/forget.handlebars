<a class="logout" href="/register">Home</a>

{{#if errorMessage}}
    <div class="error">{{errorMessage}}</div>
{{/if}}

{{#if message}}
    <div class="success">{{message}}</div>
{{/if}}

<div class="presentation">Please enter your email. You will receive an email to reset your password.</div>

<form class="form" method="POST">
    <input type="text" name="email" class="input" placeholder="email" autocomplete="off" autofocus>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button class='btn btn__login'>RESET PASSWORD</button>
</form>